<script language="vbscript" runat="server">

' place all global configuration here
Sub Application_OnStart
  Application("visitors") = 0
  Application("rootURL") = "/learn-classic-asp"
End Sub

Sub Session_OnStart
  Application.Lock
  Application("visitors") = Application("visitors") + 1
  Application.UnLock
End Sub

Sub Session_OnEnd
  Application.Lock
  Application("visitors") = Application("visitors") - 1
  Application.UnLock
End Sub



</script>
